generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id                Int                    @id @default(autoincrement())
  title             String
  description       String?
  lat               Float
  lng               Float
  source            String
  url               String?                @unique
  verified          Boolean                @default(false)
  type              String
  extractedLocation String?
  googleMapsUrl     String?
  originalCreatedAt DateTime?              // Original creation time from source (TikTok video, tweet, etc.)
  createdAt         DateTime               @default(now())
  updatedAt         DateTime               @updatedAt
  // embedding         Unsupported("vector")? // Temporarily disabled - requires pgvector extension

  @@map("events")
  @@index([createdAt], map: "idx_events_createdAt")
  @@index([type], map: "idx_events_type")
  @@index([createdAt, type], map: "idx_events_createdAt_type")
}

model GeocodeCache {
  id               Int      @id @default(autoincrement())
  locationText     String   @unique
  latitude         Float
  longitude        Float
  formattedAddress String?
  source           String
  confidenceScore  Float?
  createdAt        DateTime @default(now())
  lastUsedAt       DateTime @default(now())
  usageCount       Int      @default(1)

  @@map("geocode_cache")
}

model WarningMarker {
  id               Int      @id @default(autoincrement())
  tweetId          String   @unique
  text             String
  createdAt        DateTime
  bookmarks        Int      @default(0)
  favorites        Int      @default(0)
  retweets         Int      @default(0)
  views            String   @default("0")
  quotes           Int      @default(0)
  replies          Int      @default(0)
  userInfo         Json
  extractedLocation String?
  lat              Float?
  lng              Float?
  confidenceScore  Float?
  verified         Boolean  @default(false)
  processedAt      DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("warning_markers")
  @@index([createdAt], map: "idx_warning_markers_createdAt")
}

model HoaxFactCheck {
  id                  String   @id @default(cuid())
  rssGuid             String   @unique
  title               String
  originalClaim       String?
  hoaxCategory        String   // 'SALAH' or 'PENIPUAN'
  verificationMethod  String?
  investigationResult String?
  authorName          String?
  sourceUrl           String   @unique
  publicationDate     DateTime
  contentHash         String?
  processedAt         DateTime @default(now())
  isActive            Boolean  @default(true)

  // Vector embeddings stored as JSONB array for Neon compatibility
  embedding           Json?

  // Metadata
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@map("hoax_fact_checks")
  @@index([hoaxCategory], map: "idx_hoax_category")
  @@index([publicationDate], map: "idx_hoax_publication_date")
  @@index([isActive], map: "idx_hoax_active")
  @@index([rssGuid], map: "idx_hoax_guid")
}

model RSSMetrics {
  id                  Int      @id @default(autoincrement())
  timestamp           DateTime
  successRate         Float
  responseTime        Int      // in milliseconds
  errorCount          Int      @default(0)
  newItemsCount       Int      @default(0)
  createdAt           DateTime @default(now())

  @@map("rss_metrics")
  @@index([timestamp], map: "idx_rss_metrics_timestamp")
}
