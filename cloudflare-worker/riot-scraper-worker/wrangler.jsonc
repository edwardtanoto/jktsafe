/**
 * Cloudflare Worker for Riot Signal News Scraping
 * Runs every 30 minutes to scrape news and process incidents
 */
{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "riot-scraper-worker",
	"main": "src/index.ts",
	"compatibility_date": "2025-08-30",
	"compatibility_flags": [
		"global_fetch_strictly_public"
	],
	"triggers": {
		"crons": ["*/30 * * * *"]
	},
	"observability": {
		"enabled": true
	},
	/**
	 * Environment Variables
	 * Set these using: wrangler secret put <NAME>
	 */
	"vars": {
		"MAIN_APP_URL": "https://your-app-url.vercel.app"
	},
	/**
	 * Secrets (sensitive data)
	 * Set these using: wrangler secret put <SECRET_NAME>
	 *
	 * Required secrets:
	 * - AZURE_OPENAI_API_KEY
	 * - AZURE_OPENAI_ENDPOINT
	 * - AZURE_OPENAI_DEPLOYMENT
	 * - MAPBOX_ACCESS_TOKEN
	 * - GOOGLE_NEWS_API_KEY (optional)
	 */
}